/* pages/search/search.wxss */
.searchContainer{
  padding:0 20rpx;
}

/* 头部 */
.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx 0;
}
.searchInput{
  flex:1;
  border-radius: 30rpx;
  border: 1rpx solid red;
}
.searchInput input{
  margin-left: 60rpx;
  height: 60rpx;
}

.searchIcon{
  position: absolute;
  left: 15rpx;
  margin-left: 15rpx;
}
.placeholder{
  color: black;
}
.cancel{
  text-align: center;
  margin-left: 15rpx;
}


/* 热搜榜 */
.hotContainer .title{
  margin-top: 50rpx;
  font-size: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-bottom:1rpx solid #eee;
}

.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem {
  width: 50%;
  /* flex:0 0 auto; */
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}
.hotItem .order {
  padding:0 10rpx
}
.hotItem image {
  width: 35rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
/* 搜索内容展示 */
.searchContent{
  height: 80rpx;
  line-height: 80rpx;
  color: #d43c33;
  font-size: 24rpx;
  border-bottom:1rpx solid red;
}
.searchItem {
  line-height: 80rpx;
  display: flex;
}
.searchItem .content {
  flex:1;
  margin-left: 20rpx;
  border-bottom:1rpx solid rgb(196, 153, 185);
  font-size: 26rpx;
}

/* 搜索历史 */
.history{
  position: relative;
  display: flex;
  flex-wrap: wrap;
  line-height: 50rpx;
  margin: 20rpx 0;
}
.history .title{
  font-size: 28rpx;
  height: 50rpx;
}
.history .historyItem{
  height: 50rpx;
  font-size: 26rpx;
  background-color: #ededed;
  margin-left: 20rpx;
  padding: 0 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
/* 历史记录 */
.history .delete{
  position: absolute;
  bottom:10rpx;
  right: 15rpx;
  font-size: 36rpx;
}